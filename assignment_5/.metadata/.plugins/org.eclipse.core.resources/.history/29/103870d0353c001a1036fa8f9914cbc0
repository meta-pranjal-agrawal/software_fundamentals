import java.util.Scanner;


public class Arithmatic 
{
	/**
	 * 
	 * @param n1
	 * @param n2
	 * @return getLcm of two numbers
	 */
	
	 int lcm=1;
	public int getLcm(int n1,int n2) 
	{
		try
		{
		if(lcm%n1 ==0 && lcm%n2 ==0)
		{
			int lcm1 = lcm;
			lcm = 1;
			return lcm1;
		}		
		}
		catch(Exception e)
		{
			return -1;
		}
		
		lcm++;
		return getLcm(n1,n2);
		
	}
	 
	/**
	 * 
	 * @param n1
	 * @param n2
	 * @return getHcf of two numbers
	 */
	
	public int getHcf(int n1,int n2)
	{
		if(n1 == 0)
			return n2;
		return getHcf(n2%n1 , n1);
	}

	public static void main(String[] args) 
	{
		Arithmatic arithmatic = new Arithmatic();
		System.out.println("Enter 2 numbers to calculate lcm and hcf");
		Scanner sc= new Scanner(System.in);
		try
		{
			int n1=sc.nextInt();
			int n2=sc.nextInt();
		}
		catch(Exception e)
		{
			System.out.println("Enter correct input");
			sc.nextLine();
			int n1=sc.nextInt();
			int n2=sc.nextInt();
		}
		int lcm = arithmatic.getLcm(n1, n2);
		System.out.println("LCM= "+lcm);
		int hcf = arithmatic.getHcf(n1, n2);
		System.out.println("HCF= "+hcf);

	}

}
