import static org.junit.Assert.assertEquals;
import org.junit.Test;

public class ArrOperationTest 
{
	@Test
	public void No_of_Clumps_Test()
	{
		int [] arr={1,2,2,3,4,4};
		int size=6;
		int count=0;
		int element=0;
		for(int i=0;i<size-1;i++)
		{
			if(arr[i]==arr[i+1] && element!=arr[i])
			{
				count++;
				element=arr[i];
			}
			
		}
		assertEquals(2,count);
	}
	

}
