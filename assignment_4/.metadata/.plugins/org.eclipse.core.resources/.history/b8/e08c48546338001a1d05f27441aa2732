import java.util.Scanner;


public class ArrOperation
{
	public int No_of_Clumps(int []arr,int size)
	{
		int count=0;
		int element=-1;
		for(int i=0;i<size-1;i++)
		{
			if(arr[i]==arr[i+1] && element!=arr[i])
			{
				count++;
				element=arr[i];
			}
			else
			{
				if(arr[i]!=element)
				{
					element=-1;
				}
			}
			
		}
		
		return count;
		
	}
	
	/*public int[] FixXY(int []arr,int x,int y)
	{
		
		
		
		return 0;
	}*/
	
	public int SplitArray(int []arr,int size)
	{
		int arr1[]= new int[size];
		int arr2[]= new int[size];
		
		for(int i=0;i<size;i++)
		{
			for(int j=0;j<i;j++)
			{
				
			}
		}
		
		return -1;
	}
	public static void main(String[] args)
	{

		int[] arr= new int[10];
		Scanner sc= new Scanner(System.in);
		System.out.println("enter the number of elements");
		int size=sc.nextInt();
		System.out.println("enter the elements");
		for(int i=0;i<size;i++)
		{
			arr[i]=sc.nextInt();
		}
		ArrOperation arroperation=new ArrOperation();
		int clumps=arroperation.No_of_Clumps(arr,size);
		System.out.println(clumps);
		
		System.out.println("Enter X and Y");
		int x=sc.nextInt();
		int y=sc.nextInt();
		
		int new_arr[]= new int[size];
		new_arr=arroperation.FixXY(new_arr, x, y);
		
	}

}
