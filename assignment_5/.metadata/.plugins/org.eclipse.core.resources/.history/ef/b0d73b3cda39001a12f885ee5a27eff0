import java.util.Scanner;


public class Arithmatic 
{
	/**
	 * 
	 * @param n1
	 * @param n2
	 * @return LCM of two numbers
	 */
	
	 int lcm=1;
	public int LCM(int n1,int n2)
	{
		
		if(lcm%n1==0 && lcm%n2==0)
		{
			int lcm1=lcm;
			lcm=1;
			return lcm1;
		}		
		
		lcm++;
		return LCM(n1,n2);
		
	}
	
	/**
	 * 
	 * @param n1
	 * @param n2
	 * @return HCF of two numbers
	 */
	
	public int HCF(int n1,int n2)
	{
		if(n1==0)
			return n2;
		return HCF(n2%n1 , n1);
	}

	public static void main(String[] args) 
	{
		Arithmatic arithmatic=new Arithmatic();
		System.out.println("Enter 2 numbers to calculate lcm and hcf");
		Scanner sc= new Scanner(System.in);
		int n1=sc.nextInt();
		int n2=sc.nextInt();
		int lcm=arithmatic.LCM(n1, n2);
		System.out.println("LCM="+lcm);
		int hcf= arithmatic.HCF(n1, n2);
		System.out.println("HCF="+hcf);

	}

}
