import static org.junit.Assert.assertEquals;  
import static org.junit.Assert.*;
import org.junit.Test;

public class ArithmaticTest 
{
	@Test
	public void LCMTest1()
	{
		Arithmatic arith= new Arithmatic();
		int lcm=arith.LCM(4, 5);
		assertEquals(lcm,20);
	}
	
	@Test
	public void LCMTest2()
	{
		Arithmatic arith= new Arithmatic();
		int lcm=arith.LCM(6,8);
		assertEquals(lcm,24);
	}
	@Test
	public void LCMTest3()
	{
		Arithmatic arith= new Arithmatic();
		int lcm=arith.LCM(0, 5);
		assertEquals(lcm,5);
	}
	
	public int HCF(int n1,int n2)
	{
		if(n1==0)
			return n2;
		return HCF(n2%n1 , n1);
	}
}
