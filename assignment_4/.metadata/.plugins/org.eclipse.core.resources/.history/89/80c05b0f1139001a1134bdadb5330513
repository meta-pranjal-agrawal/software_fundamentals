import static org.junit.Assert.assertEquals;
import org.junit.Test;

public class ArrOperationTest 
{
	@Test
	public void Mirror1()
	{
		ArrOperation arroperation= new ArrOperation();
		int size=arroperation.Mirror(new int[]{1,2,3,8,9,3,2,1}, 8);
		assertEquals(3,size);
	}
	
	@Test
	public void Mirror2()
	{
		ArrOperation arroperation= new ArrOperation();
		int size=arroperation.Mirror(new int[]{7,1,4,9,7,4,1}, 7);
		assertEquals(2,size);
	}
	
	@Test
	public void Mirror3()
	{
		ArrOperation arroperation= new ArrOperation();
		int size=arroperation.Mirror(new int[]{1,2,1,4},4);
		assertEquals(3,size);
	}
	
	
	
	
	@Test
	public void No_of_Clumps_Test1()
	{
		int [] arr={1,2,2,3,4,4};
		int size=6;
		int count=0;
		int element=0;
		for(int i=0;i<size-1;i++)
		{
			if(arr[i]==arr[i+1] && element!=arr[i])
			{
				count++;
				element=arr[i];
			}
			else
			{
				if(arr[i]!=element)
				{
					element=-1;
				}
			}
			
		}
		assertEquals(2,count);
	}
	
	@Test
	public void No_of_Clumps_Test2()
	{
		int [] arr={1,1,2,1,1};
		int size=5;
		int count=0;
		int element=0;
		for(int i=0;i<size-1;i++)
		{
			if(arr[i]==arr[i+1] && element!=arr[i])
			{
				count++;
				element=arr[i];
			}
			else
			{
				if(arr[i]!=element)
				{
					element=-1;
				}
			}
			
		}
		assertEquals(2,count);
	}
	
	@Test
	public void No_of_Clumps_Test3()
	{
		int [] arr={1,1,1,1,1};
		int size=5;
		int count=0;
		int element=0;
		for(int i=0;i<size-1;i++)
		{
			if(arr[i]==arr[i+1] && element!=arr[i])
			{
				count++;
				element=arr[i];
			}
			else
			{
				if(arr[i]!=element)
				{
					element=-1;
				}
			}
			
		}
		assertEquals(1,count);
	}
	
	
	

}
