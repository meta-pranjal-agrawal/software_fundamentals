import java.util.Arrays;
import java.util.Collections;
import java.util.Scanner;


public class ArrOperation
{
	public int Mirror(int []arr,int size)
	{
		int max=0;
		
		int [][]matrix=new int[size+1][size+1];
		for(int i=0;i<=size;i++)
		{
			for(int j=0;j<=size;j++)
			{
				if(i==0||j==0)
				{
					matrix[i][j]=0;
				}
				else if(arr[i]==arr[size-1-j])
				{
					matrix[i][j]=matrix[i-1][j-1]+1;
				}
				else
				{
					matrix[i][j]=0;
				}
				if(max<matrix[i][j])
				{
					max=matrix[i][j];
				}
				
			}
		}
		return max;
	}
	
	public int splitArray(int []arr,int size)
	{
		int leftarr=arr[0],rightarr=0;
		int index=-1;
		for(int i=0;i<size;i++)
		{
			rightarr=0;
			for(int j=i+1;j<size;j++)
			{
				rightarr=rightarr+arr[j];
			}
		}
		return -1;
		
	}
	public int No_of_Clumps(int []arr,int size)
	{
		int count=0;
		int element=-1;
		for(int i=0;i<size-1;i++)
		{
			if(arr[i]==arr[i+1] && element!=arr[i])
			{
				count++;
				element=arr[i];
			}
			else
			{
				if(arr[i]!=element)
				{
					element=-1;
				}
			}
			
		}
		
		return count;
		
	}
	
